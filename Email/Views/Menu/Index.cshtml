@using Email.Models.MailModels;
@using System.Security.Claims;
@model IQueryable<ListMailModel>
@{
    ViewData["Title"] = "Index";
}
<div class="side-nav">
    <a class="btn btn-outline-light" style="text-align:left;" asp-action="SendMail">Send Mail</a>
    <a class="btn-outline-secondary" href="#">Primary</a>
    <a class="btn-outline-secondary" href="#">Sent</a>
    <a class="btn-outline-secondary" href="#">Promotion</a>
    <a class="btn-outline-secondary" href="#">Unwanted</a>
    <a class="btn-outline-secondary" href="#">Junk</a>   
    <a class="btn btn-outline-info" style="text-align:left;" asp-action="SignOut">Sign Out</a>
</div>

<p>@User?.FindFirst(ClaimTypes.Name)?.Value @User?.FindFirst(ClaimTypes.Surname)?.Value</p>

<div class="table" >
    @foreach (var item in Model)
    {
                <a class="btn btn-outline-dark" style="height:65px;margin:1px;width:100%;" asp-action="OpenMail" asp-route-mailId="@item.Id">
            <div class="d-xxl-table-cell">
                <p>@item.SenderName</p>
            </div> 
                    <div class="d-xxl-table-cell" style="width:85%;">
                <p style="text-align:left;">@item.Subject - @item.Message</p>
            </div>
                <div class="d-xxl-table-cell">
                <form method="post">
                    <button class="btn btn-outline-light" type="submit" asp-action="Delete" asp-route-mailId="@item.Id" >Delete</button>
                </form>
            </div>
            <div class="d-xxl-table-cell" style="width:100%; text-align:right;">
                <p>@item.DateTime_</p>
            </div>      
        </a>         
    }
</div>

