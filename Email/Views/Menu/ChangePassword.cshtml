@using Email.Models.UserModels;
@model ChangePassword
@{
    ViewData["Title"] = "ChangePassword";
}

<h1>ChangePassword</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangePassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ConfirmOldPassword" class="control-label"> Current Password:</label>
                <input asp-for="ConfirmOldPassword" class="form-control" />
                <span asp-validation-for="ConfirmOldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label"> New Password:</label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmNewPassword" class="control-label"> New Password:</label>
                <input asp-for="ConfirmNewPassword" class="form-control" />
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>
            <input asp-for="OldPassword" value="@Model.OldPassword" type="hidden" />
            <input asp-for="Email" value="@Model.Email" type="hidden" />
            <input type="submit" class="bnt btn-outline-dark" />
        </form>
    </div>
</div>
<div>
    <a class="btn btn-outline-dark" asp-action="Profile">Back</a>
</div>